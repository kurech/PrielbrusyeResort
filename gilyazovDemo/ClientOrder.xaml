<Window x:Class="gilyazovDemo.ClientOrder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:gilyazovDemo"
        mc:Ignorable="d"
        Title="PrielbrusyeResort" Height="250" Width="450" WindowState="Maximized">
    <Grid>
        <StackPanel>
            <StackPanel>
                <TextBlock Text="Бронирование услуг" FontWeight="Bold" HorizontalAlignment="Center" FontSize="35" VerticalAlignment="Top"/>
            </StackPanel>
            <StackPanel>
                <TextBlock Foreground="#FF498C51" FontSize="25" x:Name="ServicesList"/>
                <TextBlock Margin="10,0,0,0" FontSize="20">Введите длительность брони (в минутах)</TextBlock>
                <TextBox Margin="10,10,10,10" x:Name="OrderTime" Width="200" Height="30" FontSize="15" HorizontalAlignment="Left" BorderBrush="#FF76E383" BorderThickness="2"/>
                <Button FontSize="20" Margin="10,10,10,10" x:Name="Apply" Content="Принять" Width="100" HorizontalAlignment="Left" Click="Apply_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
